# Configurações do Servidor
PORT=3001
NODE_ENV=production

# Neon PostgreSQL
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/neondb?sslmode=require

# JWT Secret (gere uma chave segura)
JWT_SECRET=sua_chave_jwt_secreta_aqui

# URL do Frontend/App
CORS_ORIGIN=*

# Upload de imagens
UPLOAD_DIR=./uploads

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=seu_token_mercadopago

# Melhor Envio (obtenha em https://melhorenvio.com.br/painel/integracao/tokens)
MELHORENVIO_TOKEN=seu_token_melhorenvio
MELHORENVIO_SANDBOX=false

# URL da API (Railway vai fornecer automaticamente)
API_URL=https://seu-app.railway.app
