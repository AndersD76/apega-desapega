################################################################################
#                    APEGA DESAPEGA - MOBILE APP CONFIG
################################################################################

# IMPORTANTE: Em Expo, variáveis que precisam ser acessadas no código JavaScript
# devem ter o prefixo EXPO_PUBLIC_

################################################################################
#                          CONFIGURAÇÕES DA API
################################################################################

# URL da API Backend (sem barra no final)
# Desenvolvimento local: http://localhost:3001
# Produção: https://api.apegadesapega.com.br
EXPO_PUBLIC_API_URL=http://localhost:3001

# API Version
EXPO_PUBLIC_API_VERSION=v1

# Timeout padrão para requisições (ms)
EXPO_PUBLIC_API_TIMEOUT=30000

################################################################################
#                          STRIPE (Pagamentos)
################################################################################

# Stripe Publishable Key (pode ser exposta no cliente)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

################################################################################
#                          MERCADO PAGO (Pagamentos)
################################################################################

# Mercado Pago Public Key (pode ser exposta no cliente)
EXPO_PUBLIC_MERCADOPAGO_PUBLIC_KEY=APP_USR-xxxxx

################################################################################
#                          GOOGLE MAPS API
################################################################################

# Google Maps API Key
# iOS: Configure também em app.json -> ios.config.googleMapsApiKey
# Android: Configure também em app.json -> android.config.googleMaps.apiKey
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaSy...

################################################################################
#                          FIREBASE (Push Notifications)
################################################################################

# Firebase Config (obtido do Firebase Console)
EXPO_PUBLIC_FIREBASE_API_KEY=AIzaSy...
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=apega-desapega.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=apega-desapega
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=apega-desapega.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:xxxxx
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

################################################################################
#                          GOOGLE ANALYTICS 4
################################################################################

# GA4 Measurement ID (para tracking de eventos)
EXPO_PUBLIC_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

################################################################################
#                          APP CONFIG
################################################################################

# Deep Linking Scheme
EXPO_PUBLIC_APP_SCHEME=apegadesapega

# App Version
EXPO_PUBLIC_APP_VERSION=1.0.0

# Environment (development, staging, production)
EXPO_PUBLIC_ENV=development

################################################################################
#                          RECURSOS OPCIONAIS
################################################################################

# Habilitar modo debug
EXPO_PUBLIC_DEBUG_MODE=false

# Habilitar logs de API
EXPO_PUBLIC_API_LOGGING=true

# Habilitar Analytics
EXPO_PUBLIC_ANALYTICS_ENABLED=true

# URL do FAQ/Ajuda
EXPO_PUBLIC_HELP_URL=https://ajuda.apegadesapega.com.br

# URL dos Termos de Uso
EXPO_PUBLIC_TERMS_URL=https://apegadesapega.com.br/termos

# URL da Política de Privacidade
EXPO_PUBLIC_PRIVACY_URL=https://apegadesapega.com.br/privacidade

################################################################################
#                          CONFIGURAÇÕES DE IMAGENS
################################################################################

# Max image size para upload (bytes)
EXPO_PUBLIC_MAX_IMAGE_SIZE=5242880

# Max número de imagens por produto
EXPO_PUBLIC_MAX_PRODUCT_IMAGES=8

# Qualidade de compressão (0-1)
EXPO_PUBLIC_IMAGE_QUALITY=0.8

################################################################################
#                          CONFIGURAÇÕES SOCIAIS
################################################################################

# URLs para compartilhamento
EXPO_PUBLIC_FACEBOOK_APP_ID=
EXPO_PUBLIC_INSTAGRAM_USERNAME=@apegadesapega
EXPO_PUBLIC_TWITTER_USERNAME=@apegadesapega

################################################################################
#                          DESENVOLVIMENTO
################################################################################

# Habilitar React Native Debugger
EXPO_PUBLIC_ENABLE_DEBUGGER=false

# Mock de APIs (útil para desenvolvimento offline)
EXPO_PUBLIC_USE_MOCK_API=false
